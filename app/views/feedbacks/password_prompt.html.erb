<!-- app/views/feedbacks/password_prompt.html.erb -->
<h1>Password Required</h1>

<%= form_with url: authenticate_feedbacks_path, method: :post, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, class: "border p-2 w-full" %>
  </div>
  <div style="text-align: center;">
    <%= f.submit "Submit", style: "background-color: #AB9394; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; border: none; cursor: pointer; font-size: 1rem; font-weight: bold; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);" %>
  </div>
<% end %>
