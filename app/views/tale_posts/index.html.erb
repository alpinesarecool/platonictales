<div class="flex flex-col">
  <!-- Heading Section -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold">It's Unpublished Yet!</h1>
  </div>

  <!-- Blog Post Section -->
  <div class="flex flex-wrap gap-6">
    <% @tale_posts.each do |tale_post| %>
      <div class="w-full">
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to tale_post.title, tale_post_path(tale_post), class: "text-blue-500 hover:underline" %>
        </h2>
        <p class="text-base leading-relaxed">
          <%= truncate(tale_post.body, length: 200, omission: "...") %>
        </p>
      </div>
    <% end %>
  </div>
</div>
